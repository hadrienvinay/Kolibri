{% trans_default_domain 'FOSUserBundle' %}

{% extends "::base.html.twig" %}

{% block fos_user_content %}
<div class="well" style="padding-bottom: 35%; margin:5%; text-align: center;">
    <h2 class="text-uppercase mb-0"> {{ 'registration.submit'|trans }}</h2>
    <div class="col-lg-8 form-horizontal" style="margin-left: 16%; text-align: center;">
        {{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register'}}) }}
            {{ form_widget(form) }}
        <div>
            <input type="submit" class="btn btn-default" value="Inscription" />
        </div>
        {{ form_rest(form) }}

        {{ form_end(form) }}
    </div>
</div>
{% endblock %}